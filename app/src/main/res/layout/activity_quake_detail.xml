<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.curso.androidt.earthquake.QuakeDetailActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">



            <TextView
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:text="Title"
                android:id="@+id/txtDetailTitle"
                android:layout_weight="3"
                android:singleLine="false"
                android:textSize="24dp"
                android:textStyle="bold" />

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.92">

            <!-- Icon, Magnitude and Date -->
            <ImageView
                android:id="@+id/imageViewDetailIconMagnitude"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/small_icon_green"
                android:layout_margin="5dp"
                android:layout_weight="0"
                android:layout_gravity="center_vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="M 3.5"
                android:id="@+id/txtDetailMagnitude"
                android:layout_weight="2"
                android:textColor="#ffa30b03"
                android:textSize="22dp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="20-09-2015 18:45"
                android:id="@+id/txtDetailDate"
                android:layout_weight="3"
                android:textSize="22dp"
                android:gravity="center_horizontal"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtDetailLink"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:text="http://www.dsslksdfasf/dfsfsfsfs/sdfadsfadsfa.es"
            android:layout_weight="6.20"
            android:layout_margin="10dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Location:"
            android:textStyle="bold"

            />



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtDetailLocation"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text=""
                android:layout_weight="6.20"
                android:layout_margin="10dp"

                />

            <ImageView
                android:id="@+id/imageViewDetailIconDirection"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="5dp"
                android:layout_weight="0"
                />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btnDetailViewOnMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View on map"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
